<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/style_stroke_transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>  <!-- 80% ширины экрана -->
        <item name="android:windowMinWidthMinor">60%</item>  <!-- 60% высоты экрана -->
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:background">@color/Azure</item> <!-- Цвет фона -->
        <item name="android:textColorPrimary">@color/DarkSlateGray</item> <!-- Цвет текста -->
<!--        <item name="android:buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>-->
    </style>

    <style name="AlertButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/DarkGray</item>
    </style>

    <style name="SquareFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>
</resources>