<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/mainLayout_TTD"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainContainer_TTD"        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lineTop_TTD"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/lineTopStart_TTD"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvTime_TTD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="0:00" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineTopEnd_TTD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/style_underline_black"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lineBot_TTD"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/lineBotStart_TTD"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tvTimeHalf_TTD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="cursive"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:text="30"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineBotEnd_TTD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/style_underline_dashed_black"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>